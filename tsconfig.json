{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "esModuleInterop": true,

    "outDir": "lib",
    "declaration": true,

    "noEmitOnError": true,
  },
  "include": [
    "src/**/*.ts",
    "definitions/**/*.d.ts"
  ]
}